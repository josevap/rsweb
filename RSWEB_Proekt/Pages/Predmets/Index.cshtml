@page
@model RSWEB_Proekt.Pages.Predmets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Predmeti</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>


<form asp-controller="Predmets" asp-action="Index" method="get">
    <p>
        <input type="text" id="searchstring" name="searchstring" value="" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table  class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Predmet[0].Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predmet[0].Semestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predmet[0].Programa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Predmet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programa)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
